<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Directors</title>
    <link rel="stylesheet" href="/styles/styles.css" />
    <script>
      function confirmDeletion() {
        return confirm('Are you sure you want to delete this move?');
      }
    </script>
  </head>
  <body>
    <%- include('../partials/header') %>
    <button class="add-button" onclick="window.location.href='directors/new'">
      +
    </button>
    <main>
      <h2>Directors</h2>
      <table>
        <thead>
          <tr>
            <th>Full Name</th>
            <th>Birth Date</th>
          </tr>
        </thead>
        <tbody>
          <% if(directors){ %> <% directors.forEach(director => {%>
          <tr>
            <td><%= director.fullName %></td>
            <td><%= director.birthDate %></td>
            <td class="iconsContainer">
              <a href="/directors/<%= director.id %>/edit">
                <img src="/icons/edit-icon.svg" alt="Edit"
              /></a>
              <form
                action="/directors/<%= director.id %>/delete?_method=DELETE"
                method="post"
                onsubmit="return confirmDeletion()"
              >
                <input type="hidden" name="_method" value="DELETE" />
                <button type="submit">
                  <img src="/icons/trash-icon.svg" alt="Delete" />
                </button>
              </form>
            </td>
          </tr>
          <%});}%>
        </tbody>
      </table>
    </main>
  </body>
</html>
