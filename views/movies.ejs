<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movies</title>
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Year</th>
            <th>Genre</th>
          </tr>
        </thead>
        <tbody>
          <% if(movies){ %> <% movies.forEach(movie => { %>
          <tr>
            <td><%= movie.title %></td>
            <td><%= movie.year %></td>
            <td><%= movie.genreName %></td>
          </tr>
          <%});}%>
        </tbody>
      </table>
    </main>
  </body>
</html>
