<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Genres</title>
  </head>
  <body>
    <%- include('partials/header') %>
    <main>
      <table>
        <thead>
          <tr>
            <th>Name</th>
          </tr>
        </thead>
        <tbody>
          <% if(genres){ %> <% genres.forEach(genre => { %>
          <tr>
            <td><%= genre.name %></td>
            <td class="iconsContainer">
              <a href=""> <img src="/icons/edit-icon.svg" alt="Edit" /></a>
              <a href=""> <img src="/icons/trash-icon.svg" alt="Delete" /></a>
            </td>
          </tr>
          <%});}%>
        </tbody>
      </table>
    </main>
  </body>
</html>
